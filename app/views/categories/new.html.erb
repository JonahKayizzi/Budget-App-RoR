<div class= "nav-bar">
  <div class="back-arrow">
    <%= link_to categories_path do %>
      <i class="fa-regular fa-arrow-left">Back</i>
    <% end %>
  </div>
  <h2 class="login-head">NEW CATEGORY</h2>
</div>
<div class="notification">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="signout">
        <%= button_to 'SIGN OUT', destroy_user_session_path, method: :delete %>
    </div>
</div>
<div class="container">
    <%= form_with model: category, method: :post, url: categories_path, local: true do |form| %>
        <div class="field"> 
            <%= form.text_field :name, class: 'form-control', placeholder: "Name" %>
        </div>
        <div class="field">
            <%= form.text_field :icon, class: 'form-control', placeholder: "ICON URL" %> 
        </div>
        <div class="form-group form-submit">
            <%= form.submit 'CREATE CATEGORY', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>