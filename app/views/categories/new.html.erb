<div class="container">
    <h1>New Category</h1>
    <%= form_with model: category, method: :post, url: categories_path, local: true do |form| %> 
        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :icon %>
            <%= form.text_field :icon, class: 'form-control' %> 
        </div>
        <div class="form-group">
            <%= form.submit 'Create Category', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>