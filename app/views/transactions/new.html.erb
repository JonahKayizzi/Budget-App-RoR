<div class= "nav-bar">
  <div class="back-arrow">
    <%= link_to categories_path do %>
      <i class="fa-regular fa-arrow-left">Back</i>
    <% end %>
  </div>
  <h2 class="login-head">ADD A TRANSACTION</h2>
</div>
<div class="notification">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="signout">
        <%= button_to 'SIGN OUT', destroy_user_session_path, method: :delete %>
    </div>
</div>
<div class="container">
    <%= form_with model: transaction, url: category_transactions_path(@current_category), local: true do |form| %>
        <div class="field"> 
            <%= form.text_field :name, class: 'form-control', placeholder: "Name" %>
        </div>
        <div class="field"> 
            <%= form.text_field :amount, class: 'form-control', placeholder: "Amount" %> 
        </div>
        <div class="field"> 
            <%= form.label :categories %>
            <%= form.collection_select :category_ids, Category.all, :id, :name, {}, { multiple: true, include_blank: false } %>
        </div>
        <div class="form-group form-submit">
            <%= form.submit 'Create Category', class: 'btn btn-primary' %>
        </div>
    <% end %>
</div>